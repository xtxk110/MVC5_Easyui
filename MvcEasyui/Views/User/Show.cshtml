
@{
    Layout = null;
}
@Html.Partial("DatagridToolBar")
<span id="total" style="display:none">0</span>
<table id="dg" class="" title="" fit="true" fitColumns="true"
       method="post" toolbar="#toolbar" striped="true" rownumbers="true" pagination="true" remoteSort="false">
    <thead>
        <tr>
            <th field="checkbox" checkbox="true"></th>
            <th field="Id" width="0" align="center" hidden="hidden" ></th>
            <th field="OrgId" width="0" align="center" hidden="hidden"></th>
            <th field="PosId" width="0" align="center" hidden="hidden"></th>
            <th field="Name" width="10" align="center" sortable="true">姓名</th>
            <th field="Code" width="10" align="center" sortable="true">账号</th>
            <th field="OrgName" width="20" align="center" sortable="true">部门名称</th>
            <th field="PosName" width="20" align="center" sortable="true">职位名称</th>
            <th field="IsEnable" width="5" align="center" sortable="true">是否启用</th>
            <th field="IsDefault" width="5" align="center" sortable="true">是否预置</th>
            <th field="CreateDate" width="10" align="center" sortable="true">创建日期</th>
            <th field="Comment" width="20" align="center" sortable="true">说明</th>
        </tr>
    </thead>
</table>
@Html.Partial("DialogButton")
<div id="dialog_add" class="easyui-dialog" headerCls="dialog-panel-title" modal="true" buttons="#buttons" style="padding:10px 10px;" 
      data-options="closed:true,onBeforeClose:FormClear('fm_add')">
    <form id="fm_add" method="post">
        <input id="Id" name="Id" type="hidden" />
        <div class="user-div">
            <label for="Code" style="display:block;font-size:14px">账号:</label>
            <input id="Code" name="Code" class="easyui-textbox" data-options="required:true" style="width:300px;height:30px; border-radius:5px;" />
        </div>
        <div id="div-pwd" class="user-div">
            <label for="Pwd" style="display:block;font-size:14px">密码:</label>
            <input id="Pwd" name="Pwd" class="easyui-textbox"  data-options="validType:'length[6,20]'" style="width:300px;height:30px; border-radius:5px;">
        </div>
        <div class="user-div">
            <label for="Name" style="display:block;font-size:14px">姓名:</label>
            <input id="Name" name="Name" class="easyui-textbox" data-options="required:true" style="width:300px;height:30px; border-radius:5px;">
        </div>
        <div class="user-div">
            <label for="OrgId" style="display:block;font-size:14px">部门:</label>
            <input id="OrgId" name="OrgId" data-options="required:true" style="width:300px;height:30px" />
        </div>
        <div class="user-div">
            <label for="PosId" style="display:block;font-size:14px" >职位:</label>
            <input id="PosId" name="PosId"  data-options="required:true" style="width:300px;height:30px" />
        </div>
        <div class="user-div">
            <label for="RoleId" style="display:block;font-size:14px">角色:</label>
            <input id="RoleId" name="RoleId" data-options="multiple:true,valueField: 'id',textField: 'text'" style="width:300px;height:30px" >
        </div>
        <div id="comment-div" class="user-div">
            <label for="Comment" style="display:block;font-size:14px">说明:</label>
            <input id="Comment" name="Comment" class="easyui-textbox" multiline="true" style="width:300px;height:50px" />
        </div>
        <div id="div-enable" style="display:none">
            <label for="IsEnable" style="font-size:14px;margin-right:10px">是否启用:</label>
            <input id="IsEnable" name="IsEnable" class="easyui-switchbutton" data-options="onText:'启用',offText:'禁用',value:true" style="height:30px">
        </div>
    </form>
</div>
<script>
    
    DatagridTotalInit("dg", "/User/Get", "total");
    $(function () {
        UserViewInit();
    });
</script>